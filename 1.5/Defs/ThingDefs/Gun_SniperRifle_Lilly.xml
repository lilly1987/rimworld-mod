<?xml version="1.0" encoding="utf-8"?>
<Defs>

<ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_SniperRifle_lilly</defName>
    <label>sniper rifle</label>
    <description>An ancient design of precision sniper rifle. Bolt action. It has an exceptionally long range, great accuracy and good power. Because it's so unwieldy, other weapons outclass it at close range.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/SniperRifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <weaponClasses>
      <li>LongShots</li>
      <li>RangedHeavy</li>
    </weaponClasses>
    <recipeMaker>
      <researchPrerequisite/>
      <skillRequirements/>
      <displayPriority>425</displayPriority>
    </recipeMaker>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
      <WorkToMake>1</WorkToMake>
      <Mass>1</Mass>
      <SellPriceFactor>1.0</SellPriceFactor>
      <AccuracyTouch>10.0</AccuracyTouch>
      <AccuracyShort>10.0</AccuracyShort>
      <AccuracyMedium>10.0</AccuracyMedium>
      <AccuracyLong>10.0</AccuracyLong>
      <RangedWeapon_Cooldown>1.15</RangedWeapon_Cooldown>
      <Flammability>0.0</Flammability>
      <Beauty>100</Beauty>
      <DeteriorationRate>0</DeteriorationRate>
    </statBases>
    <costList/>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_SniperRifle_lilly</defaultProjectile>
        <warmupTime>0.875</warmupTime>
        <range>500.0</range>
        <soundCast>Shot_SniperRifle</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>100</power>
        <cooldownTime>1</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>100</power>
        <cooldownTime>1</cooldownTime>
      </li>
    </tools>
    <weaponTags Inherit="False">
      <li>SniperRifle</li>
    </weaponTags>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_SniperRifle_lilly</defName>
    <label>sniper rifle bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>50</damageAmountBase>
      <stoppingPower>10.0</stoppingPower>
      <speed>200</speed>
    </projectile>
  </ThingDef>
  
</Defs>